.fixed-ad{
	position: fixed;
	z-index: 999;
}
.tip-text {
	text-align: center;
	font-size: 32rpx;
	color: #4d4d4d;
	margin-top: 10rpx;
	background-color: yellow;
}
.nav {
	margin-top: 10rpx;
	display: flex;
	width: 100%;
}
.nav-left {
	width: 30%;
	height: 90vh;
	/* border: 2upx solid red; */
	/* background-color: #ddd; */
}
.nav-left-item {
	height: 25vh;
	/* border-right: solid 1px #E0E0E0; */
	/* border-bottom: solid 1px #E0E0E0; */
	font-size: 32rpx;
	/* color: #FFFFFF; */
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #e6e6e6;
	color: #484242;
	margin-bottom: 4rpx;
}
.garbage-gan {
	background-color: #616d6d;
	color: #FFFFFF;
}
.garbage-shi {
	background-color: #00844b;
	color: #FFFFFF;
}
.garbage-huishou {
	background-color: #005991;
	color: #FFFFFF;
}
.garbage-youhai {
	background-color: #ce4a46;
	color: #FFFFFF;
}
/* boder */
.garbage-gan-border {
	border-left: 10rpx solid #616d6d;
}
.garbage-shi-border {
	border-left: 10rpx solid #00844b;
}
.garbage-huishou-border {
	border-left: 10rpx solid #005991;
}
.garbage-youhai-border {
	border-left: 10rpx solid #ce4a46;
}
.main-img {
	width: 200rpx;
	height: 200rpx;
}
/* 右边 的样式 */
.nav-right {
	width: 70%;
}
.nav-right-item {
	/* width: 28%; */
	height: 20rpx;
	/* float: left; */
	/* text-align: center; */
	padding: 28rpx;
	font-size: 32rpx;
	/* border: 1upx solid #F24544; */
	display: flex;
	flex-direction: column;
	justify-content: center;
	border-radius: 10rpx;
}
.style1{
	background-color: #e6f4f1;
}
.style2{
	background-color: #eefcfe;
}
.active {
	color: #F24544;
}
.padding {
	width: 100%;
	top: 0;
	position: fixed;
	background-color: #F24544;
}
.content {
	width: 100%;
}
/* 右边展示的图片 */
.view-img{
	display: flex;
	flex-direction:row ;
	justify-content: center;
}
.show-img{
	width:400rpx;
	height:500rpx;
}
