/* 表格列表 start */
.table {
	width: 500rpx;
	padding: 0 0;
	font-size: 30rpx;
	border-radius: 30%;
	border-color: #18BC37;
	border-width: 10rpx;
}
.table-item {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	padding: 6rpx;
	height: 50rpx;
}
.icon-img {
	width: 50rpx;
	height: 50rpx;
	/* padding: 4upx; */
}
.table-item-icon {
	width: 10%;
	text-align: center;
}
.garbage-name {
	width: 50%;
	line-height: 50rpx;
	margin-left: 20rpx;
}
.through {
	text-decoration: line-through;
}
.selected {
	width: 25%;
	line-height: 50rpx;
	text-align: center;
}
.result {
	width: 25%;
	text-align: center;
	line-height: 50rpx;
}
.style1{
	background-color: #e6f4f1;
}
.style2{
	background-color: #eefcfe;
}
.garbage-gan-item {
	color: rgb(44, 43, 39);
}
.garbage-shi-item {
	color: rgb(102, 63, 52);
}
.garbage-huishou-item {
	color: rgb(36, 71, 131);
}
.garbage-youhai-item {
	color: rgb(229, 49, 34);
}

/* 表格列表 end */
